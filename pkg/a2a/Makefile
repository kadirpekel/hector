# A2A Protocol - Code Generation
# This Makefile is self-contained within the pkg/a2a package

.PHONY: generate
generate:
	@echo "ðŸ”§ Generating Go code from official A2A proto..."
	@PATH="$(shell go env GOPATH)/bin:$$PATH" protoc --proto_path=proto \
		--go_out=pb \
		--go-grpc_out=pb \
		--grpc-gateway_out=pb \
		--go_opt=paths=source_relative \
		--go-grpc_opt=paths=source_relative \
		--grpc-gateway_opt=paths=source_relative \
		--grpc-gateway_opt=generate_unbound_methods=true \
		proto/a2a.proto
	@echo "âœ… Generation complete (gRPC + REST gateway)"

.PHONY: clean
clean:
	@echo "ðŸ§¹ Cleaning generated files..."
	rm -f pb/*.go
	@echo "âœ… Cleaned"

.PHONY: update-proto
update-proto:
	@echo "ðŸ“¥ Downloading latest official A2A proto..."
	curl -s -o proto/a2a.proto https://raw.githubusercontent.com/a2aproject/A2A/refs/heads/main/specification/grpc/a2a.proto
	@echo "âœ… Proto updated"

