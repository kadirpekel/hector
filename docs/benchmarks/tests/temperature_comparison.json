{
  "test_name": "temperature_comparison",
  "description": "Compare agent performance at different temperature settings",
  "test_type": "benchmark",
  "variants": [
    {
      "name": "temp_0",
      "description": "Temperature 0.0 (deterministic)",
      "config": "configs/baseline-openai.yaml",
      "config_overrides": {
        "llms.test-llm.temperature": 0.0
      }
    },
    {
      "name": "temp_03",
      "description": "Temperature 0.3 (low creativity)",
      "config": "configs/baseline-openai.yaml",
      "config_overrides": {
        "llms.test-llm.temperature": 0.3
      }
    },
    {
      "name": "temp_07",
      "description": "Temperature 0.7 (balanced)",
      "config": "configs/baseline-openai.yaml",
      "config_overrides": {
        "llms.test-llm.temperature": 0.7
      }
    },
    {
      "name": "temp_10",
      "description": "Temperature 1.0 (high creativity)",
      "config": "configs/baseline-openai.yaml",
      "config_overrides": {
        "llms.test-llm.temperature": 1.0
      }
    }
  ],
  "scenarios": [
    {
      "name": "factual_question",
      "prompt": "What is the capital of France?",
      "expected_output_keywords": ["Paris"]
    },
    {
      "name": "creative_task",
      "prompt": "Write a short poem about coding",
      "success_criteria": {
        "max_tokens": 200
      }
    },
    {
      "name": "reasoning_task",
      "prompt": "If all roses are flowers and some flowers fade quickly, can we conclude that some roses fade quickly?",
      "expected_output_keywords": ["cannot", "conclude", "some"]
    }
  ],
  "metrics": {
    "primary": "quality",
    "secondary": ["tokens", "consistency"]
  },
  "providers": ["openai"],
  "iterations": 5
}

